{
	"manifest_version": 2,
	"name": "Clippy w/ Popup",
	"version": "1.0",

	"description": "Adds a button to the toolbar of the browser that can be clicked",
	"homepage_url": "https://github.com/lucacandela/Clip/tree/testo-presto",
	"icons": {
		"48": "icons/icon1-48.png",
		"96": "icons/icon1-96.png"
	},

	"permissions": [
		"activeTab",
		"clipboardRead",
		"clipboardWrite"
	],

	"browser_action": {
		"default_icon": "icons/icon2-32.png",
		"default_title": "Clippy",
		"default_popup": "popup/clipboard.html"
	}
}